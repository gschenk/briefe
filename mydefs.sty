\providecommand{\subject}[1]{%
  \setkomavar{subject}{#1}
}

% overwrite latex title macro,
% assign value to koma variable
\renewcommand{\title}[1]{%
  \setkomavar{title}{#1}
}


% remove \\ from its argument text
\newcommand\doSingleLine[1]{%
  \let\normalnewline=\\
  \let\\=\relax
  #1%
  \let\\=\normalnewline
}


